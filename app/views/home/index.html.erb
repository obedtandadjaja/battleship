<div class="container">
	<div class="row">
		<div class="col l6 m6 s12">
			<div class="card">
				<div class="card-content">
					<h5>Game lobby</h5>
					<div class="row">
						<div class="col s12">
							<div class="col s12">
								<h6>Chaos Games</h6>
								<div class="chaos_games">
								<%= render "lobby_games", :games => @chaos_games %>
								</div>
							</div>
							<div class="col s12">
								<h6>Traditional Games</h6>
								<div class="traditional_games">
								<%= render "lobby_games", :games => @traditional_games %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col l6 m6 s12">
			<div class="card">
				<div class="card-content">
					<h5>Create a lobby</h5>
					<%= form_for(:game, url: '/games') do |f| %>
					<div class="row">
						<div class="input-field">
							<%= f.text_field :name %>
							<label for="name">Name</label>
						</div>
						<div class="input-field">
							<%= f.password_field :password %>
							<label for="password">Password (optional)</label>
						</div>
						<div class="input-field">
							<%= f.number_field :num_players %>
							<label for="num_players">Number of players</label>
						</div>
						<div class="input-field col s12">
						    <select id="game_type" name="game[type]">
						      	<option value="Chaos">Chaos</option>
						      	<option value="Traditional">Traditional</option>
						    </select>
						    <label>Game type</label>
					  	</div>
						<%= f.submit "Create game", class: "btn blue-grey col s12" %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

<%= content_for :script do %>
	<%= javascript_include_tag "home/index" %>
<% end %>