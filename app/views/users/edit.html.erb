<div class="container">
	<div class="row">
		<div class="card">
			<div class="card-content">
				<div class="row">
					<div class="col s12">
						<%= form_for @user, html:{class: "form-horizontal"} do |f| %>

						  <div class="field">
						    <%= f.label :name %><br />
						    <%= f.text_field :name%>
						  </div>

						  <div class="field">
						    <%= f.label :email %><br />
						    <%= f.email_field :email %>
						  </div>

						  <div class="actions">
						    <%= f.submit "Update", class: "btn blue-grey" %>
						  </div>

						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>