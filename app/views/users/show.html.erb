<div class="container">
	<div class="row">
		<div class="card">
			<div class="card-content">
				<div class="row">
					<h5>Profile</h5>
					<br>
					<div class="col l6 m6 s12 grey-text">
						<p class="blue-grey-text">Account Information</p>
						<hr/>
						<p>Name: <%= @user.name %></p>
						<p>Email: <%= @user.email %></p>
						<br>
					</div>
					<div class="col l6 m6 s12">
						<p class="blue-grey-text">Account Settings</p>
						<hr/>
						<a href="/users/<%= @user.id %>/edit" class="btn blue-grey">Update Profile</a>
						<a href="/users/password/new" class="btn blue-grey">Request password reset</a>
						<br>
					</div>
					<div class="col s12 grey-text">
						<p class="blue-grey-text"><%= @user.name %>'s Record</p>
						<hr/>
						<p>High score: <%= @user.high_score %></p>
						<p>Average score: <%= @user.avg_score %></p>
						<p>Wins: <%= @user.wins %></p>
						<p>Losses: <%= @user.losses %></p>
						<p>Total score: <%= @user.total_score %></p>
						<br>
					</div>
					<div class="col s12 grey-text">
						<p class="blue-grey-text"><%= @user.name %>'s Account Record</p>
						<hr/>
						<p>Sign in count: <%= @user.sign_in_count %></p>
						<p>Current sign in time: <%= @user.current_sign_in_at %></p>
						<p>Last sign in time: <%= @user.last_sign_in_at %></p>
						<p>Current sign in IP address: <%= @user.current_sign_in_ip %></p>
						<p>Last sign in IP address: <%= @user.last_sign_in_ip %></p>
						<p>Last updated profile: <%= @user.updated_at %></p>
						<p>Account created at: <%= @user.created_at %></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>